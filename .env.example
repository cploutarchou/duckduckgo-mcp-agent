# Environment variables for MCP Web Search Agent

# Application Settings
MCP_APP_NAME="MCP Web Search Agent"
MCP_APP_VERSION="1.0.0"
MCP_DEBUG=false
MCP_ENVIRONMENT=production

# Server Settings
MCP_HOST=0.0.0.0
MCP_PORT=8000
MCP_WORKERS=4

# Search Settings
MCP_MAX_SEARCH_RESULTS=10
MCP_DEFAULT_SEARCH_RESULTS=5
MCP_SEARCH_TIMEOUT=30

# Rate Limiting
MCP_RATE_LIMIT_ENABLED=true
MCP_RATE_LIMIT_REQUESTS=100
MCP_RATE_LIMIT_PERIOD=60

# Caching
MCP_CACHE_ENABLED=true
MCP_CACHE_TTL=3600
MCP_CACHE_MAX_SIZE=1000

# Logging
MCP_LOG_LEVEL=INFO
MCP_LOG_FORMAT=json
# MCP_LOG_FILE=/var/log/mcp/server.log

# CORS
MCP_CORS_ENABLED=true
MCP_CORS_ORIGINS=["*"]

# API Key (optional, for future use)
# MCP_API_KEY=your-secret-api-key
